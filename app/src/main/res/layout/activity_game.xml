<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">


    <LinearLayout
        android:id="@+id/imgAndText"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/packBackMenuLL"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@color/CornflowerBlue"
            android:gravity="top"
            android:orientation="horizontal"

            >
             <ImageView
                android:id="@+id/ImgMelody"
                 android:layout_width="70dp"
                 android:layout_height="70dp"
                 android:layout_gravity="center"
                 android:layout_weight="1"
                 android:paddingLeft="5dp"
                 android:paddingRight="5dp"

                 tools:srcCompat="@tools:sample/avatars" />
            <!--android:scaleType="centerCrop"-->



            <ImageView
                android:id="@+id/ImgLyrics"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                tools:srcCompat="@tools:sample/avatars" />
            <ImageView
                android:id="@+id/ImgInstruments"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ImgCordProgression"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/ImgTheme"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:srcCompat="@tools:sample/avatars" />


        </LinearLayout>

        <ImageView
            android:id="@+id/helpArrowProgression"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/textLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/CornflowerBlue"
            android:orientation="horizontal"
            android:textColor="@color/White">

            <TextView
                android:id="@+id/CordProgressionTxt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Chord"
                android:gravity="center_horizontal"
                android:textColor="@color/White"
                android:typeface="serif"/>



            <TextView
                android:id="@+id/LyricsTxt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Lyrics"
                android:gravity="center_horizontal"
                android:textColor="@color/White"
                android:typeface="serif"
                />
            <TextView
                android:id="@+id/InstrumentsTxt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Instrument"
                android:gravity="center_horizontal"
                android:textColor="@color/White"/>

            <TextView
                android:id="@+id/MelodyTxt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Melody"
                android:gravity="center_horizontal"
                android:textColor="@color/White"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/ThemeTxt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Theme"
                android:gravity="center_horizontal"
                android:textColor="@color/White"
                android:typeface="serif"/>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/songTitleLayout"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/songTitle"
            android:layout_width="287dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/title_text_view"
            android:gravity="center"
            android:text="Song Title"
            android:textSize="48dp"
            android:textColor="@color/White"
            android:typeface="serif"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:background="@color/Beige"
        android:layout_below="@+id/songTitleLayout"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <!--<Button-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:layout_weight="1"-->
        <!--android:backgroundTint="@color/Black"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="new song"-->
        <!--android:textColor="@color/White" />-->

        <Button
            android:id="@+id/recordBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottons_not_finished"
            android:paddingLeft="10dp"
            android:text="record"
            android:textColor="@color/Black"
            android:layout_margin="5dp"
            tools:ignore="ButtonStyle"
            android:typeface="serif"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/noteBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottons_not_finished"
            android:paddingLeft="10dp"
            android:text="song notes"
            android:layout_margin="5dp"
            android:textColor="@color/Black"
            android:typeface="serif"
            android:gravity="center"
            android:textAlignment="center"/>

        <!--<Button-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:layout_weight="1"-->
        <!--android:backgroundTint="@color/Black"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="General comment"-->
        <!--android:textColor="@color/White" />-->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/shuffleOrChooseMode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/songTitleLayout"
        android:layout_alignParentStart="true"
        android:background="@color/Beige"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible"
        tools:context=".shuffleOrChooseMode">

        <Button
            android:id="@+id/btnShuffle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/rectengle_no_finished"
            android:text="@string/btnShuffle"
            android:typeface="serif"
            android:gravity="center"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btnChoose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_toEndOf="@+id/btnShuffle"
            android:background="@drawable/rectengle_no_finished"
            android:text="@string/btnChoose"
            android:typeface="serif"
            android:gravity="center"
            android:textAlignment="center"
            />
    </LinearLayout>
