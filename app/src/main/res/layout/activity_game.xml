    <LinearLayout
        android:id="@+id/helpArrowLL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/imgAndText"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="4dp"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/helpArrowMelody"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />



        <ImageView
            android:id="@+id/helpArrowLyrics"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/animals"/>
        <ImageView
            android:id="@+id/helpArrowInstruments"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/helpArrowChordProgrretion"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"
            android:src="@drawable/animals"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/helpArrowTheme"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_weight="1"

            tools:srcCompat="@tools:sample/avatars"
            android:src="@drawable/animals"/>
